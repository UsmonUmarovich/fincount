<div style="position: absolute; z-index:9999; top: 0px; width: 100%; height: 100px; background-color: white;">
  <h1 style="display: flex; justify-content: center; margin-top: 10px; font-size: 50px;"><span class="fincount-fin">FIN</span><span class="fincount-count">COUNT</span></h1>
</div>
<form
  action="/register"
  method="post"
  class="h-screen flex flex-col gap-3 max-w-xs mx-auto justify-center items-center"
>
  <h1 class="text-2xl text-neutral-300 p-4">Register</h1>

  <input
    name="name"
    type="text"
    placeholder="Name"
    class="input input-bordered w-full max-w-xs"
  />
  <input
    name="surname"
    type="text"
    placeholder="Surname"
    class="input input-bordered w-full max-w-xs"
  />

  <input
    name="username"
    type="text"
    placeholder="Username"
    class="input input-bordered w-full max-w-xs"
  />
  <input
    name="password"
    type="password"
    placeholder="New Password"
    class="input input-bordered w-full max-w-xs"
  />

  <button class="btn btn-primary w-full">Sign up</button>
  <a class="btn link link-hover" href="http://localhost:8080/">Login</a>
</form>